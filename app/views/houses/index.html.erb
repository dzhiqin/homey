
<h1 class="main-title">房屋资产信息列表</h1>
<hr>
<div class="container">
  <%= form_tag admin_houses_path,method: :get,class:"search-form" do  %>
    <%= text_field_tag 'filter_house_id' ,nil,placeholder:"请输入ID" %>
    <%= submit_tag '按ID查找',class:"btn btn-default" %>
  <% end %>

  <%= link_to '新增房源信息',new_admin_house_path,:class=>"btn btn-primary common-btn" %>
  <%= link_to '返回',:back,:class=>"btn btn-success common-btn" %>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>id</th>
        <th>address</th>
        <th>created_at</th>
        <th>options</th>
      </tr>
    </thead>
    <tbody>
      <% @houses.each do |house|%>
        <tr bgcolor=<%= (house.status=="invalid")? "#ececec" : "#fff"%>>
          <td>
              <%= link_to(house.house_id,house_path(house))  %>
          </td>
          <td><%= house.address %></td>
          <td><%= house.created_at.strftime('%F') %></td>
          <td>
            <% if current_user %>
              <% if can? :update ,house %>
                <%= link_to('edit',edit_house_path(house),class:"btn btn-info") %>
              <% end %>
              <% if can? :destroy , house %>
                <%= link_to('destroy',house_path(house),method: :delete,data:{confirm:"are you sure?"},class:"btn btn-danger") %>
              <%end%>
            <% end %>
          </td>
        </tr>
      <%end%>
    </tbody>
  </table>
  <%= paginate @houses %>

</div>
