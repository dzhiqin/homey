<table class="table table-bordered  table-hover table-responsive table-bg" >
  <tbody>
    <tr>
      <td colspan="1">编号:<%= house.house_id %></td>
      <td colspan="1">录入时间: <%= house.created_at.strftime('%F %H:%M') %></td>

      <td colspan="1">上次登录: <%if current_user%> <%= current_user.last_sign_in_at.strftime('%F %H:%M') %> <%end%></td>

      <td colspan="1">看房热线 <%= house.contact_phone %></td>
      <td colspan="1">联系人: <%= house.contact_name %></td>
    </tr>

    <tr>
      <td colspan="1">区域: <%= house.district.name %></td>
      <td colspan="2">产权地址: <%= house.address %></td>
      <td colspan="1">绿化: <%= house.greening %></td>
      <td colspan="1">景观: <%= house.landscape %></td>

    </tr>

    <tr>
      <td >层高(<%= render_single_or_deplex(house) %>): <%= house.floor_height %>(m)</td>
      <td>产权面积: <%= house.property_area %>(㎡)</td>
      <td>公摊面积: <%= house.public_area %>(㎡)</td>
      <td>实际使用面积: <%= house.actual_area %>(㎡)</td>
      <td>公共通道:
        <% if house.public_passage.present? %>
        <%= t(house.public_passage,:scope=>"house.level.narrow") %>
        <% end %>
      </td>
    </tr>
    <tr>
      <td colspan="1">结构: <%= house.structure %></td>
      <td colspan="1">竣工时间 <%= house.completion_date %></td>
      <td colspan="1">空间规划: <%= house.spatial_planning %></td>
      <td>套内硬装:
        <% if house.house_upgrade.present? %>
        <%= t(house.house_upgrade,:scope=>"house.flag.you_wu") %>
        <% end %>
      </td>
      <td>套内软装:
        <% if house.house_furnishings.present?%>
        <%= t(house.house_furnishings,:scope=>"house.flag.you_wu") %>
        <% end %>
      </td>

    </tr>
    <tr>

      <td>停车位:
        <% if house.parking_space.present? %>
        <%= t(house.parking_space,:scope=>"house.flag.you_wu") %>
        <% end %>
      </td>
      <td>封闭式小区:
        <% if house.gated_community.present?%>
        <%= t(house.gated_community,:scope=>"house.flag.shi_fou") %>
        <% end %>
      </td>
      <td>燃气管道:
        <%if house.gas_pipeline.present?%>
        <%= t(house.gas_pipeline,:scope=>"house.flag.you_wu") %>
        <% end %>
      </td>
      <td>电梯:
        <% if house.elevator.present?%>
        <%= t(house.elevator,:scope=>"house.flag.you_wu") %>
        <% end %>
      </td>
      <td>包租成本:
        <% if house.charter_costs.present? %>
        <%= t(house.charter_costs,:scope=>"house.flag.you_wu") %>
        <% end %>
      </td>
    </tr>
    <tr>

      <td>门禁安保服务:
        <% if house.sercurity_service.present? %>
        <%= t(house.sercurity_service,:scope=>"house.flag.you_wu") %>
        <% end %>
      </td>
